<h1 class="text-center bg-white">All Treatments</h1>
<div class="d-flex p-2 bd-highlight">
  <div class="card-container">
  <% @treatments.each do |t| %>

  <div class="card-product">
    <img src="https://source.unsplash.com/1600x900/?spa" alt="" height="200px">
    <i class="far fa-heart"></i>
    <div id="card-product-infos">
      <h2> <%= link_to t.center_name, treatment_path(t.id) %></h2>
      <p>  <%= t.name %> </p>
      <p>  <%= t.address %> </p>
       <% if policy(t).update? %>
  <%= link_to 'Edit', edit_treatment_path(t) %>
  <% end %>
   <% if policy(t).destroy? %>
  <%= link_to '', t, method: :delete, data: {confirm: "Are you sure?"}, class: "fa fa-trash" %>
  <% end %>
      <%= link_to 'See More', treatment_path(t.id), class: "btn btn-ghost" %>
      <p class="price">  <%= t.price %> </p>

    </div>
  </div>
  <% end %>
  </div>
  <div
    id="map"
    style="width: 50vw;
    margin-right: 5px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
      </div>
