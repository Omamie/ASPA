<h1 class="text-center bg-white">All Treatments</h1>
<div class="d-flex p-2 bd-highlight">
  <div class="card-container">
  <% @treatments.each do |t| %>

  <div class="treatment-centre-card-product">
    <%= cl_image_tag t.photo, height: 300, width: 400, crop: :fill %>
    <div class="centre-card-details1">
    <div class="treatment-centre-card-product-infos">
      <div class="treatment-centre-card-product-infos-text">
      <h3><%= t.name.upcase %></h3>
      <p><%= t.address.capitalize %></p>


      <% if policy(t).update? %>
  <%= link_to 'Edit', edit_treatment_path(t) %>
  <% end %>
   <% if policy(t).destroy? %>
  <%= link_to '', t, method: :delete, data: {confirm: "Are you sure?"}, class: "fa fa-trash" %>
  <% end %>
      </div>
      </div>
      </div>
      <div class="centre-card-details">
        <div class="centre-card-price">
      <p><%= link_to t.center_name, treatment_path(t.id)%></p>
      <p>From: <%= t.price %></p>
      </div>
      </div>
  </div>
  <% end %>
  </div>
  <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
      </div>
