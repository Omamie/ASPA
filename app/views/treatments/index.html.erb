<h1 class="text-center bg-white">All Treatments</h1>
<div class="container-all">
  <div class="card-container">
  <% @treatments.each do |t| %>
  <div class="card-treatment">
    <img src="https://source.unsplash.com/1600x900/?spa" alt="" height="200px">
    <div id="card-text">
      <h3> <%= t.center_name %> </h3>
      <p>  <%= t.name %> </p>
      <p class="price">  <%= t.price %> </p>
    </div>
  </div>
  <% end %>
  </div>
  <div
    id="map"
    style="width: 50vw;
    margin-right: 5px;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
